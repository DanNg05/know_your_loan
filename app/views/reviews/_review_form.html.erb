<%= simple_form_for [broker, review], html: {class: "d-flex justify-content-center align-items-center flex-column", "data-review-toggle-target": "reviewSubmit"} do |f| %>
  <%= f.input :content, required: false, data: {"review-toggle-target": "content"} %>
  <%= f.input :rating, required: false, :collection => %w[1 2 3 4 5], data: {"review-toggle-target": "rating"} %>
  <%= f.submit class:"submit-review-btn"%>
<% end %>
