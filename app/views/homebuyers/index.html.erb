<div class="container">
  <h1>Discover Our Latest Special Mortgage Rates</h1>
  <p>Looking for the best rate and a complimentary mortgage review? Simply click on the rate that interests you.</p>

  <div class="rate-table">
    <div class="table-container">
      <table class="tg">
      <tbody>
        <!-- Header row -->
        <tr class="header-row">
          <td>Lender</td>
          <td>1 year</td>
          <td>2 years</td>
          <td>3 years</td>
        </tr>


        <!-- Data rows -->
        <% @banks.each_with_index do |bank, index| %>
          <% unless index == 0 %> <!-- Skip the first row -->
          <tr>
            <td class="tg-0lax">
              <% if bank.image_url.empty? %>
                <!-- If there's no image, leave the cell empty -->
              <% else %>
              <%= link_to new_rate_homebuyer_path(bank), class:"bank_link" do %>
                  <div>
                    <img src=<%= bank.image_url %> alt="" class="image-size">
                  <span> <%= bank.name %> </span>
                  </div>
                <% end %>
              <% end %>
            </td>
            <td class="tg-0lax interest"><%= link_to "#{bank.rates[0].interest_value}", new_rate_homebuyer_path(rate_id: bank.rates[0]) %></td>
            <td class="tg-0lax interest"><%= link_to "#{bank.rates[1].interest_value}", new_rate_homebuyer_path(rate_id: bank.rates[1]) %></td>
            <td class="tg-0lax interest"><%= link_to "#{bank.rates[2].interest_value}", new_rate_homebuyer_path(rate_id: bank.rates[2]) %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
      </table>
    </div>

    <br>
</div>
