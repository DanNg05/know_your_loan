<div class="wrapper">
  <section class="video-section">
    <div class="video-container">
      <video src="<%= asset_path('flower.mp4') %>"  autoplay loop muted></video>
    </div>
    <div class="img-container">
      <%= image_tag "window.png", class: "img" %>
    </div>
    <div class="text-content">
      <div class="img_txt">
        <div class="title sm left">
          <span>between</span>
        </div>
        <div class="title bg left">
          <span>Reality</span>
        </div>
        <div class="title bg right n" style="z-index: 2;">
          <span>&</span>
        </div>
        <div class="title bg right">
          <span>Dream</span>
        </div>
      </div>
    </div>
  </section>
  <div class="v_container">
    <div class="left-side">
      <div class="hero">
        <div class="row align-items-center">
          <div class="col-12 col-md-5 col-lg-6 order-md-2 d-flex justify-content-center align-items-center"> <!-- Center the content in the column -->
            <!-- Image -->
            <div class="text-center text-md-start"> <!-- Center the Lottie animation -->
              <dotlottie-player src="https://lottie.host/d468c80b-f03b-4376-a62d-49ebf0734105/ewEgTAe1sJ.json" background="transparent" speed="1" style="width: 100%; max-width: 500px; height: auto;" autoplay loop></dotlottie-player>
            </div>
          </div>
          <div class="col-12 col-md-7 col-lg-6 order-md-1 aos-init aos-animate" data-aos="fade-up">
            <!-- Heading -->
            <h1 class="display-3 text-center text-md-start">
              <span class="title-kyl">Know Your Loan</span><br>
            </h1>
            <!-- Text -->
            <p class="lead text-center text-md-start text-body-primary mb-6 mb-lg-8">
              Unlocking Your Mortgage Journey: Empowering Your Mortgage Journey Through Visual Insights.
            </p>
            <!-- Buttons -->
            <div class="signin-container">
              <% if !current_user %>
                <div class="row">
                  <div class="col-6">
                    <%= link_to "Sign up", new_user_registration_path, class:"btn btn-primary rounded-pill" %>
                  </div>
                  <div class="col-6">
                    <%= link_to "Log in", new_user_session_path, class:"btn btn-outline-secondary rounded-pill white-bg" %>
                  </div>
                </div>
              <% else %>
                <%= link_to "Check current rates", rates_path, class:"btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
